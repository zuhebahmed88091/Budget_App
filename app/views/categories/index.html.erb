<%= link_to 'Sign out', destroy_user_session_path, method: :delete %>

<div style="background-color: #e4ecf7">
  <div class="d-flex flex-row-reverse bd-highlight" style="background-color: #3778c2">
    <div class="p-3 bd-highlight" style="color: #9cb8db">Most ancient</div>
    <div class="p-3 bd-highlight" style="color: #c1d2e8">Most recent</div>
  </div>
  <div class="d-flex flex-row-reverse bd-highlight bg-white">
    <div class="p-2 bd-highlight">$00.0</div>
    <div class="p-2 bd-highlight">Gift credit</div>
  </div>
  <br/>
  <div class="d-flex flex-column align-item-center" id="tran_groups">
    <% if user_signed_in? %>
      <% @categories.sort_by{ |category| category.created_at }.reverse.each do |category| %>
        <div class="p-2 m-2 rounded border shadow-sm bg-light d-flex">
          <div class="d-flex flex-row p-2 w-100 bd-highlight">
            <div>
              <%= raw category.icon %>
            </div>
            <div class="ps-4">
              <h4><%= link_to category.name, category_transaction_details_path(category), style: "text-decoration: none; color:#919294;" %></h4>
              <p style="font-size: 12px; color:#919294;"><%= category.created_at.to_date %></p>
            </div>
          </div>
          <div class="p-2 flex-shrink-1" style="color:#434b54;">
            <h5>$<%= category.transaction_details.sum(:amount) %></h5>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <br/>
  <br/>
  <div class="p-2 d-flex justify-content-center" style="background-color: #5fb523">
    <% if user_signed_in? %>
      <%= link_to "Add a new category", new_category_path, class: "btn border border-white text-white" %>
    <% else %>
      <!-- You can display something else for users who are not signed in here -->
    <% end %>
  </div>
  <br/>
</div>
