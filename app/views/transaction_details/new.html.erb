<div>
  <%= form_with(model: [ @category, @transaction_detail], local: true) do |form| %>
    <% if @transaction_detail.errors.any? %>
      <div>
        <h2><%= pluralize(@transaction_detail.errors.count, "error") %> prohibited this transaction from being saved:</h2>
        <ul>
          <% @transaction_detail.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.label :amount, style: "display: block" %>
      <%= form.number_field :amount %>
    </div>
    <br />
    <div>
      <%= form.submit "Create Transaction", class: "btn btn-outline-success" %>
      <%= link_to "Back to Transactions", category_transaction_details_path(category_id: params[:category_id]), class: "btn btn-outline-warning" %>
    </div>
  <% end %>
</div>
